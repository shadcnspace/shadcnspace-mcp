{
  "name": "shadcnspace-mcp",
  "version": "1.0.0",
  "description": "MCP server for installing and composing shadcn space UI components",
  "type": "module",
  "main": "./dist/server.js",
  "module": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "bin": {
    "shadcnspace-mcp": "./dist/server.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "tailwind",
    "ui-components",
    "shadcnspace",
    "shadcn",
    "ai-tools"
  ],
  "author": "shadcnspace",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^25.0.1",
    "typescript": "^5.9.3"
  }
}